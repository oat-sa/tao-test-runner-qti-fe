{
    "name": "@oat-sa/tao-test-runner-qti",
    "version": "0.1.0",
    "description": "TAO Test Runner QTI implementation",
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "npx qunit-testrunner",
        "test:keepAlive": "npx qunit-testrunner --keepalive",
        "test:cov": "npx qunit-testrunner --cov",
        "coverage": "nyc report",
        "coverage:html": "nyc report --reporter=lcov && open-cli coverage/lcov-report/index.html",
        "build": "rollup --config ./build/rollup.config.js",
        "build:watch": "rollup --config ./build/rollup.config.js --watch",
        "buildScss": "node ./build/scss.js",
        "lint": "eslint src",
        "prepare": "npm run buildScss && npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oat-sa/tao-test-runner-qti-fe.git"
    },
    "keywords": [
        "tao",
        "testrunner",
        "qti",
        "fe",
        "frontend"
    ],
    "publishConfig": {
        "access": "public"
    },
    "license": "GPL-2.0",
    "bugs": {
        "url": "https://github.com/oat-sa/tao-test-runner-qti-fe/issues"
    },
    "homepage": "https://github.com/oat-sa/tao-test-runner-qti-fe#readme",
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/preset-env": "^7.4.5",
        "@oat-sa/browserslist-config-tao": "^0.1.0",
        "@oat-sa/tao-core-libs": "^0.1.0",
        "@oat-sa/tao-core-sdk": "^0.4.1",
        "@oat-sa/tao-core-ui": "^0.16.1",
        "@oat-sa/tao-item-runner": "github:oat-sa/tao-item-runner-fe#develop",
        "@oat-sa/tao-item-runner-qti": "github:oat-sa/tao-item-runner-qti-fe#develop",
        "@oat-sa/tao-qunit-testrunner": "^0.1.0",
        "@oat-sa/tao-test-runner": "github:oat-sa/tao-test-runner-fe#feature/NEX-92_initial-copy-of-test-runner-sources",
        "autoprefixer": "^9.6.0",
        "dompurify": "^1.0.11",
        "eslint": "^6.0.1",
        "eslint-plugin-es": "^1.4.0",
        "eslint-plugin-jsdoc": "^8.6.0",
        "glob": "^7.1.4",
        "handlebars": "^1.3.0",
        "jquery": "^1.9.1",
        "lodash": "^2.4.1",
        "moment": "^2.11.1",
        "nyc": "^14.1.1",
        "open-cli": "^5.0.0",
        "postcss-node-sass": "^2.1.8",
        "postcss-scss": "^2.0.0",
        "qunit": "^2.9.2",
        "require-css": "^0.1.10",
        "requirejs-plugins": "^1.0.2",
        "rollup": "^1.16.2",
        "rollup-plugin-alias": "^1.5.2",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-handlebars-plus": "^0.2.4"
    },
    "browserslist": [
        "extends @oat-sa/browserslist-config-tao"
    ]
}
